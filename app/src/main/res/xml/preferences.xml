<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/default_user"
        android:icon="@drawable/ic_person_black_24dp"
        android:key="@string/prf_user"
        android:title="@string/pref_name_title" />

    <ListPreference
        android:defaultValue="@string/default_country"
        android:entries="@array/country_labels"
        android:entryValues="@array/country_values"
        android:icon="@drawable/ic_map_black_24dp"
        android:key="@string/prf_country"
        android:title="@string/pref_country_title" />

    <ListPreference
        android:defaultValue="@string/default_keyword"
        android:entries="@array/keyword"
        android:entryValues="@array/keyword"
        android:icon="@drawable/ic_notifications_black_24dp"
        android:key="@string/prf_keyword"
        android:title="@string/pref_keyword_title" />

</PreferenceScreen>